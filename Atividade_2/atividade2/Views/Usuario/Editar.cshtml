@model Usuario

@{
    ViewData["Title"] = "Editar";

}

<form method="POST" asp-action="Editar">
    <input type="hidden" asp-for="Id">
<p>
    <label asp-for="Nome">Insira seu nome:</label>
    <input asp-for="Nome">
</p>
<p>
    <label asp-for="Login">Insira seu login:</label>
    <input asp-for="Login">
</p>
<p>
    <label asp-for="Senha">Insira sua senha:</label>
    <input asp-for="Senha">
</p>
<p>
    <label asp-for="DataNascimento">Insira sua data de nascimento:</label>
    <input asp-for="DataNascimento" type="date">
</p>
<p>
    <input type="submit" value="Salvar edição">
</p>

</form>

<p>
    @ViewBag.mensagem
</p>